#include <stdio.h>
#include <string.h>

int main() {
    char palavra[100], invertida[100];
    int comprimento, i, ehPalindromo = 1;

    // Solicita ao usuário uma palavra
    printf("Digite uma palavra: ");
    scanf("%s", palavra);

    comprimento = strlen(palavra);

    // Verifica se a palavra é um palíndromo
    for (i = 0; i < comprimento / 2; i++) {
        if (palavra[i] != palavra[comprimento - i - 1]) {
            ehPalindromo = 0;
            break;
        }
    }

    // Exibe o resultado
    if (ehPalindromo) {
        printf("%s é um palíndromo.\n", palavra);
    } else {
        printf("%s não é um palíndromo.\n", palavra);
    }

    return 0;
}
